{
  "manifest_version": 3,
  "name": "Smart Comment Assistant",
  "version": "1.0.0",
  "description": "Generate YouTube comment replies using OpenAI's API",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["src/content/content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/icon.svg"
  },
  "icons": {
    "128": "assets/icon.svg"
  }
}